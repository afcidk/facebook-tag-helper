{
    "manifest_version": 2,
    "name": "Facebook tag Helper",
    "description": "Helps automatically add @ of people in group member pages",
    "version": "1.3",
    "browser_action": {
        "default_icon": "icon64.png"
    },
    "options_ui": {
        "page": "startup.html",
        "chrome_style": true
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": ["tabs", "clipboardWrite", "<all_urls>", "notifications"]
}